---
import GoogleReviews from "../components/googleReviewsCarousel.jsx";
import "../styles/reset.css";
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Image from "../components/Image.astro";
---

<Layout title="Sinno Technologies - Jamil Sinno's Portfolio">
	<Header />
	<main class="main">
		<section class="container">
			<Hero />
			<Image />
		</section>
		<section class="reviewContainer">
			<h2 class="reviewTitle">Reviews</h2>
			<GoogleReviews client:load/>
		</section>
	</main>
</Layout>

<style>
	.main {
		width: 100%;
		height: auto;
	}
	.container {
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		padding: 1rem 3rem;
		gap: 1rem;
	}
	.container *{
		max-width: 50%;
	}

	.reviewContainer {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100%;
		padding: 1rem 3rem;
		gap: 1rem;
	}

	@media screen and (max-width: 1080px){
		.container{
			flex-direction: column-reverse;
			justify-content: center;
			align-items: center;
		}
	}
	
	@media (min-width: 981px){
		.container > *{
			max-width: 50%;
		}
	})
</style>
