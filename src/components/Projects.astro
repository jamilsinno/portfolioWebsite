---
import cardData from "../utils/cardData";
import Card from "./Card.astro";
---

<section class="container">
    <h3>Projects</h3>
    <ul class="cardContainer">
        <Card 
            title={cardData[0].title} 
            body={cardData[0].body} 
            img="../../public/images/unumHealth.png" 
            href={cardData[0].href} 
            repo={cardData[0].repo}
            alt={cardData[0].alt}
        />
        <Card 
            title={cardData[1].title} 
            body={cardData[1].body} 
            img={cardData[1].img} 
            href={cardData[1].href} 
            repo={cardData[1].repo}
            alt={cardData[1].alt}
        />
        <Card 
            title={cardData[2].title} 
            body={cardData[2].body} 
            img={cardData[2].img} 
            href={cardData[2].href} 
            repo={cardData[2].repo}
            alt={cardData[2].alt}
        />
    </ul>
    <a href="https://github.com/jamilsinno?tab=repositories" target="_blank" rel="noreferrer noopener" class="github">View more of my projects on GitHub</a>
</section>

<style>
    .container{
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    section,
    ul{
        width: 100%;
        height: auto;
        padding: 1rem;
    }

    h3{
        font-size: 3.5rem;
        padding: 1rem;
        font-weight: bold;
    }

    .cardContainer{
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-gap: 10px;
    }

    .github{
        font-size: 1.8rem;
        text-align: center;
		background-color: rgba(255, 255, 255, 0.75);
        padding: 1rem;
        border: 1px solid rgba(186, 55, 47, 0.5); 
        border-radius: 0.7rem;
        max-width: 50%;
        align-self:center;
    }

    .github:hover{
        background-color: rgba(186, 55, 47, 0.5); 
        color: #fff;
        border: 1px solid #000;
    }

    .github:active{
        transform: scale(0.9);
    }

    @media (max-width: 980px) {
        .cardContainer{
            grid-template-columns: 1fr;
        }
    }
</style>
