---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="Sinno Technologies - Jamil Sinno's Portfolio">
		<meta name="keywords" content="Web development, Web design, Portfolio, Virtual tour, Website builder, Web application development, Front-end development, Back-end development, User experience, Mobile applications, App design, Cross-platform development, SEO optimization, Responsive design, Digital marketing, Accessibility, WCAG, ADA compliance, Screen reader, Alt text, Keyboard navigation, Color contrast, ARIA, Assistive technology, Accessibility testing">
		<meta name="geo.placename" content="Halifax, Nova Scotia, Canada">
		<meta name="geo.region" content="CA-NS">
		<meta name="geo.position" content="45.3657;-63.2523">
		<meta name="language" content="English, en">
		<meta property="og:title" content="Software Development Services in Halifax, Nova Scotia | Atlantic Canada">
		<meta property="og:description" content="Expert software development services in Halifax, Nova Scotia, catering to Atlantic Canada. Enhance your real estate investment with our professional solutions.">
		<meta property="og:url" content="https://www.jamilsinno.ca">
		<link rel="icon" type="image/svg+xml" href="/logo/tabLogo.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="canonical" href="https://www.jamilsinno.ca">
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 186, 55, 47;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(221, 204, 203) 50% , white 60%);
	}
	html {
		font-family: 'IBM Plex Sans', system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
